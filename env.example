# URL base do site (usado para SEO e compartilhamento)
NEXT_PUBLIC_BASE_URL=https://casamento-km.vercel.app

# Chave da API do Google Maps (para o mapa na página de local)
GOOGLE_MAPS_API_KEY=sua_chave_do_google_maps_aqui

# Configurações opcionais
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ANALYTICS=G-XXXXXXXXXX

# Configurações de email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# Configurações de banco de dados (se usar um banco real)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/wedding_invite

# Chave secreta para JWT (se implementar autenticação)
JWT_SECRET=sua_chave_secreta_super_segura

# Configurações de upload de arquivos
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/avif
